                        <li>
                            <a href="#">Feeds</a>
                        </li>
                        <li>
                            <%= link_to  "Discover", discovers_photos_path %>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8 col-md-11 col-sm-11 col-12 p-0 mid-col mb-4">
