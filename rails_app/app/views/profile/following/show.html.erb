                                        <div class="name mb-2"><%=User.where(id: follower.followee_id).first.last_name%></div>
                                        <div class="number d-flex justify-content-between">
                                            <div class="photo">
                                                <span class="number"><%=User.where(id: follower.followee_id).first.count_photo%></span>
