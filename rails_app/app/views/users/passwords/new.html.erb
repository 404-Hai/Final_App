<nav class="nav-bar">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-2 col-2">
                <div class="nav-bar-brand">
                    <a href="#">Fotobook</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-3">
                <div class="search-text">
                    <input type="text" name="search" id="search" placeholder="Search Photo / Album">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-3">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 col-3">
              <div class="btn-log">
                <%- if controller_name != 'sessions' %>
                  <%= link_to "Log in", new_session_path(resource_name) %><br />
                <% end %>
              </div>
            </div>
        </div>
    </div>
</nav>
<div class="container-fluid">
    <div class="row pt-1 out-card pb-5">
        <div class="col-lg-4 col-md-4 col-sm-4 col-12 p-0"></div>
        <div class="mid-col col-lg-4 col-md-4 col-sm-4 col-12 p-0 pb-4">
            <div class="col-lg-12 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="div_title">
                            <a>Forgot your password?</a>
                        </div>
                        <div class="card mt-1 card-logo  ">
                        </div>
                        <div class="mt-3 card content-card-form">
                            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                              <%= render "users/shared/error_messages", resource: resource %>
                                <div class="field">
                                  <%= f.label :email %><br />
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                                </div>

                                <div class="actions">
                                  <%= f.submit "Send me reset password instructions" %>
                                </div>
                            <% end %>
                        </div>
                     </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-12 p-0"></div>
    </div>
</div>
<%= stylesheet_link_tag "form_login.css" %>

