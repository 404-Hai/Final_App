            </div>
        </div> 
    </nav>
    
    <div class="container-fluid">
        <div class="row pt-1 out-card">
            <div class="col-lg-2 col-md-1 col-sm-1 col-12 p-0">
                <div class="left-col d-flex">
                    <ul class="list pt-4">
                        <li >
                            <a class="active" href="#">Feeds</a>
                        </li>
                        <li>
                            <%= link_to  "Discover", discovers_photos_path %>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8 col-md-11 col-sm-11 col-12 p-3 mid-col mb-4">
                <div class="title">
                    <h5>Edit <%= resource_name.to_s.humanize %> Profile</h5>
                </div>
                <div class="row p-5 m-5">
                    <div class="col-lg-4 col-4">
                  
                    </div>
                    <div class="col-lg-8 col-8">
                        <div class="avatar-file">
                            <input type="file"  accept="image/*" name="image" id="file"   style="display: none;">
                            <label for="file" style="cursor: pointer;">Upload Image</label>
                            <img id="output" width="200" />
                        </div>
                    </div>
                    <div class="col-lg-4 col-4">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    </div>
                    <div class="col-lg-8 col-8">
                        <p class="title-area">Basic Infomation</p>
                    </div>
                    <div class="col-lg-4 col-4 d-flex justify-content-end pr-0">
                        <%= f.label :first_name %>
                    </div>
                    <div class="col-lg-8 col-8">
                        <%= f.text_field :first_name %>
                    </div>
                    <div class="col-lg-4 col-4 d-flex justify-content-end pr-0">
                        <p class="filed-text">Last Name</p>
                    </div>
                    <div class="col-lg-8 col-8">
                        <%= f.text_field :last_name %>
                    </div>
                    <div class="col-lg-4 col-4 d-flex justify-content-end pr-0">
                        <p class="filed-text">Email</p>
                    </div>
                    <div class="col-lg-8 col-8">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>
                    <div class="col-lg4 col-4">

                    </div>
                    <div class="col-lg-8 col-8">
                        
                    </div>
                  
                    <span class="line-space"></span>
                    <div class="col-lg-4 col-4">

                    </div>
                    <div class="col-lg-8 col-8">
                        <p class="title-area">Password</p>
                    </div>
                    <div class="col-lg-4 col-4 d-flex justify-content-end pr-0">
                        <p class="filed-text">Current Password</p>
                    </div>
                    <div class="col-lg-8 col-8">
                        <%= f.password_field :current_password, autocomplete: "current-password" %>
                    </div>
                    <div class="col-lg-4 col-4 d-flex justify-content-end pr-0">
                        <p class="filed-text">New Password</p>
                    </div>
                    <div class="col-lg-8 col-8">
                        <%= f.password_field :password, autocomplete: "new-password" %>
                    </div>
                    <div class="col-lg-4 col-4 d-flex justify-content-end pr-0">
                        <p class="filed-text">Password Confirmation</p>
                    </div>
                    <div class="col-lg-8 col-8">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>
                    <div class="col-lg4 col-4">

                    </div>
                    <div class="col-lg-8 col-8">
                        <%= f.submit "Save", class:"btn btn-success" %>
                    </div>
                  <%end%>
                </div>
            </div>
        </div>
    </div>
    <%= stylesheet_link_tag "form_edit_profile.css" %>





