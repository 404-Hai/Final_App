

<head>
    <link type="text/css" rel="stylesheet" href="./asset/css/style.css">    
</head>

<body>  
    <nav class="nav-bar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="nav-bar-brand">
                        <a href="#">Fotobook</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="search-text">
                        <input type="text" name="search" id="search" placeholder="Search Photo / Album">
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="account">
                        <div class="avatar">
                            <img src="https://picsum.photos/300">
                        </div>
                        <div class="name">
                            <span>Thanh Hai</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="btn-log">
                        <a href="#">Log out</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row pt-1 out-card">
            <div class="col-lg-2 col-md-2 col-sm-2 col-12 p-0">
                <div class="left-col d-flex">
                    <ul class="list pt-4">
                        <li>
                            <a class="active" href="#">Feeds</a>
                        </li>
                        <li>
                            <a href="#">Discover</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8 col-md-10 col-sm-10 col-12 p-0 mid-col mb-4">
                <div class="col-12 pl-0 pr-0">
                    <div class="pt-4 pb-4">
                        <div class="btn-select d-flex">
                            <a href="#">Photo</a>
                            <a class="active"  href="#">Album</a>
                        </div>

                    </div>
                </div>
                <div class="col-lg-12 col-12">
                    <div class="row pl-2 lr-2">
                    <% @albums.each  do |album| %>
                    
                        <div class="col-lg-6 col-md-12 col-12">
                            <div class="items mt-3 mb-3 d-flex">
                                <div class="col-6 p-0">
                                    <div class="left-item" data-toggle="modal" data-target="#exampleModalCenter">
                                        <img src="https://picsum.photos/300" data-toggle="modal" data-target="#exampleModalCenter">
                                        
                                    </div>
                                </div>
                                <div class="col-6 p-2">
                                
                                    <div class="right-item">
                                        <div class="header-item d-flex">
                                            <div class="circle-name">TH</div>
                                            <div class="name"><%=@account.where(id: album.account_id).take.last_name%></div>
                                        </div>
                                        <div class="body-item">
                                            <h3 class="title"><%= link_to album.title_album,album%></h3>
                                            <h6><%= link_to "Edit", edit_album_path(album)%></h6>
                                             <!--<h6><%= album.id%></h6>-->
                                            <p class="description m-0"></p>
                                        </div>
                                        <div class="footer-item d-flex justify-content-between">

                                            <div class="date-time">
                                                <span><%= album.created_at%></span>
                                               
                                            </div>
                                        </div>
                                    </div>
                               
                                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                ...
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary">Save changes</button>
                                            </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
 
                        <%end%>
                    </div>
                    
                </div>
            </div>
        </div>
       
    </div>
  <%= paginate @albums, theme: 'twitter-bootstrap-4'%>

<!-- Modal -->
    
</body>

